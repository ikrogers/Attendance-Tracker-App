<h1>Listing in_groups</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @in_groups.each do |in_group| %>
      <tr>
        <td><%= link_to 'Show', in_group %></td>
        <td><%= link_to 'Edit', edit_in_group_path(in_group) %></td>
        <td><%= link_to 'Destroy', in_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

