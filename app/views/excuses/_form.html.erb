<%= form_for(@excuse) do |f| %>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Alternate PT/LLAB User From</h3>
	</div>
	<div class="panel-body">
		<div class="container">

			<body>
				<a data-toggle="collapse" class='text-muted' data-parent="#accordion" href="#accordionThree">
				<p class='text-muted'>
					Detailed Instructions (Please read first if doing this first time!)

				</p></a>
				<div id="accordionThree" class="panel-collapse collapse">
					<div class="panel-body">
						<h4> Field and Options Definitions: </h4>
						<p>
							~Add excuse - Select type of excuse being granted.
						</p>
						<p>
							~Select users - Select users. You may select multiple users however they all must have same excuse parameters.
						</p>
						<p>
							~Select PT/LLAB days - Select the days user or a group of users are excused for. If you choose PT excuse from add excuse panel only select PT days otherwise no excuse will be added.
						</p>

					</div>
				</div>
				<div>
					<%= f.label "Add excuse" %>
					<br>
					<i> ~What type of excuse is it?</i>
					<br>
					<%= f.select(:event, options_for_select(Event.all.collect {|e| [e.event_name+" Excuse"]}), { :class => 'form-control', :name => 'project[add_remove][]',  :multiple => false})%>
					<%if any_errors(@excuse, :event) != nil%>
					<%= any_errors(@excuse, :event) %>
					<%end%>
				</div>
				<div>
					<%= f.label 'Select users'%>

					<br>
					<i>~Select one or more users. Only select multiple users if they are excused for same PT/LLAB days.</i>
					<%= f.select(:user_id, options_for_select(User.all.collect {|u| [(u.fname+" "+u.lname), u.id]}), {}, {data:{live_search: "true"}, :class => 'form-control', :multiple => false})%>
					<%if any_errors(@excuse, :user_id) != nil%>
					<%= any_errors(@excuse, :user_id) %>
					<%end%>
				</div>

				<div>
					<%= f.label "Select PT days" %>
					<br>
					<i> ~Select which days user is excused for and will not show up on regular attendance tracking form.</i>
					<br>
					<%= f.select(:excused_days, options_for_select(Date::DAYNAMES.collect {|day| [day]}), {}, { :class => 'form-control', :multiple => true})%>
					<%if any_errors(@excuse, :excused_days) != nil%>
					<%= any_errors(@excuse, :excused_days) %>
					<%end%>
				</div>

				<div class="actions">
					<%= f.submit  %>
					<%= link_to 'Manage Alternane PT and LLAB Users', excuses_path, :class => 'btn btn-default' %>

				</div>
				<% end %>
		</div>
		</body>
	</div>
</div>

<script>
	$(document).ready(function() {
		$('select').selectpicker();
	}); 
</script>
