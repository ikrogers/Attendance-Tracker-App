<h1>Listing attendance_policies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendance_policies.each do |attendance_policy| %>
      <tr>
        <td><%= link_to 'Show', attendance_policy %></td>
        <td><%= link_to 'Edit', edit_attendance_policy_path(attendance_policy) %></td>
        <td><%= link_to 'Destroy', attendance_policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

