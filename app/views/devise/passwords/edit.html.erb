<br>
<div class="panel panel-primary">
	<div class="panel-heading">
		Password Reset
	</div>
	<div class="panel-body">

		<body id="content" role="main">
			<div class="container">

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
				<%= f.hidden_field :reset_password_token %>

				<div>
					<%= f.text_field :password, autofocus: true, :class => 'form-control', :placeholder => 'New password' %>
					<%if devise_error_messages!(:password) !=nil%>
					<%= devise_error_messages!(:password) %>
					<%end%>
				</div>
				<br>
				<div>
					<%= f.text_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirm new password' %>
					<%if devise_error_messages!(:password_confirmation) !=nil%>
					<%= devise_error_messages!(:password_confirmation) %>
					<%end%>

				</div>
				<br>
				<div>
					<%= f.submit "Reset Password",:class => 'btn btn-primary btn-lg custombtnblock'  %>
				</div>
				<br>
				<% end %>
				<div>
					<%= link_to "Front Page", new_session_path(resource_name),:class => 'btn btn-default btn-lg custombtnblock' %>

					<%= link_to "Sign Up", new_registration_path(resource_name),:class => 'btn btn-default btn-lg custombtnblock' %>

				</div>
			</div>
		</body>
	</div>
</div>

