<body id="content" role="main">
	<div class="container">
		<h1>Forgot your password?</h1>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div>
			<%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email (One you registered with)' %>
		</div>
		<br>

		<div>
			<%= f.submit "Reset Password",:class => 'btn btn-primary btn-lg' %><br>
		</div>
		<% end %>
		<br>
		<div>
			<%= link_to "Front Page", new_session_path(resource_name),:class => 'btn btn-default btn-lg' %>
			
			<%= link_to "Sign up", new_registration_path(resource_name),:class => 'btn btn-default btn-lg' %>
			

		</div>
	</div>
</body>
