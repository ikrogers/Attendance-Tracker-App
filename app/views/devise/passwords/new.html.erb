<div class="panel panel-primary">
	<div class="panel-heading">
		Password Reset
	</div>
	<div class="panel-body">

		<body id="content" role="main">
			<div class="container">
				<h1>Forgot your password?</h1>

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

				<div>
					<%= f.text_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email (One you registered with)' %>
					<%if devise_error_messages!(:email) !=nil%>
					<%= devise_error_messages!(:email) %>
					<%end%>
				</div>
				<br>

				<div>
					<%= f.submit "Reset Password",:class => 'btn btn-primary btn-lg custombtnblock' %>
					<br>
				</div>
				<% end %>
				<br>
				<div>
					<%= link_to "Front Page", new_session_path(resource_name),:class => 'btn btn-default btn-lg custombtnblock ' %>

					<%= link_to "Sign up", new_registration_path(resource_name),:class => 'btn btn-default btn-lg custombtnblock' %>

				</div>
			</div>
		</body>
	</div>
</div>
</div>

