<body id="content" role="main">
	<div class="container">

<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div>
	<%= f.text_field :fname, autofocus: true, :class => 'form-control', :placeholder => 'First Name' %><br>
</div>

<div>
	<%= f.text_field :lname, :class => 'form-control', :placeholder => 'Last Name'%><br>
</div>

<div>
	<%= f.email_field :email, :class => 'form-control', :placeholder => 'Email (Must be deliverable)'%><br>
</div>

<div>
	<%= f.phone_field :phone, :class => 'form-control', :placeholder => '10 Digit Phone Number:'%><br>
</div>

<div>
	 <%= f.select(:carrier, options_for_select([["AT&T"], ["Verizon"], ["Boost Mobile"],["Cellular One"],["Nextel"],["Sprint"],["T-Mobile"],["Tracfone"],["Metro PCS"] ]),{}, { :class => 'form-control'})%><br>
</div>

<div>
	<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Password (Must be at least 8 alpha-numeric characters)' %><br>
</div>

<div>
	
	<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => 'Confirm Password:' %><br>
</div>

<div>
	<%= f.submit "Sign up",:class => 'btn btn-primary btn-lg' %><br><br>
    <%= link_to "Front Page", new_session_path(resource_name),:class => 'btn btn-default btn-lg' %><br />
</div>
<% end %>
</div>
</body>
