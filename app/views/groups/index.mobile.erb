
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Groups</h3>
	</div>
	<div class="panel-body">
		<table class="table">
			<thead>
				<% if current_user.admin == nil || current_user.admin == false%>
				<th>Group Name</th>
				<th>Show</th>
				<th>Record Attendance</th>

				<% end %>

				<%if  current_user.admin == true %>
				<th>Group Name</th>
				<th>Show</th>
				<th>Record Attendance</th>

				<%end%>
			</thead>
			<tbody>

				<% @groups.each do |group| %>
				<% if group.users_id == current_user.id%>
				<% if current_user.admin == nil || current_user.admin == false%>
				<tr>
					<td><%= group.name %></td>
					<td><%= link_to 'Show', group ,:class=>'btn btn-info'%></td>
					<% if current_user.tracker == true%>
          				<%if (group.grouptype.include? "Non-Attendance") == false%>
					<%if assigned_events(group.id).count < 1%>
					<td><%= link_to 'Take attendance', authenticated_root_path, :class=>'btn btn-primary', :disabled => true %></td>
					<%elsif group.grouptype.include? "Alternate"%>
					<td><%= link_to 'Take attendance', new_attendance_path(:group_id => group.id, :event => strip_alt_att(group.grouptype)), :class=>'btn btn-primary', :disabled => true %></td>
					<%else%>
					<td>
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle"  type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
							Take Attendance
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
							<%assigned_events(group.id).each do |e|%>
							<li role="presentation">
								<%= link_to e.event_name, new_attendance_path(:group_id => group.id, :event => e.event_name), :role => "menuitem", :method => :get, :tabindex => -1 %>
							</li>
							<%end%>
						</ul>
					</div></td>
					<%end%>
					<% end %>
					<% end %>
					<td></td>
					<td></td>
					<% end %>
					<% end %>
				</tr>
				<%if  current_user.admin == true || current_user.uberadmin==true %>
				<tr>
					<td><%= group.name %></td>
					<td><%= link_to 'Show', group, :class => 'btn btn-info' %></td>
          <%if (group.grouptype.include? "Non-Attendance") == false%>
					<%if assigned_events(group.id).count < 1%>
					<td><%= link_to 'Take attendance', authenticated_root_path, :class=>'btn btn-primary', :disabled => true %></td>
					<%elsif group.grouptype.include? "Alternate"%>
					<%if is_today_alt(group) == true %>
					<td><%= link_to 'Take attendance', new_attendance_path(:group_id => group.id, :event => strip_alt_att(group.grouptype)), :class=>'btn btn-primary' %></td>
					<%else%>
					<td><%= link_to 'Take attendance', authenticated_root_path, :class=>'btn btn-primary', :disabled => true %></td>
					<%end%>
					<%else%>
					<td>
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle"  type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
							Take Attendance
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
							<%assigned_events(group.id).each do |e|%>
							<li role="presentation">
								<%= link_to ""+e.event_name, new_attendance_path(:group_id => group.id, :event => e.event_name), :method => :get, :role => "menuitem", :tabindex => -1 %>
							</li>
							<%end%>
						</ul>
					</div></td>
					<%end%>
					<% end %>
<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

