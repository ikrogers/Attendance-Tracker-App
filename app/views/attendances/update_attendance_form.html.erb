<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Edit Record</h3>
	</div>
	<div class="panel-body">

		<%= form_tag(update_attendance_path) do %>
		
		
		<% @group = Group.where(grouptype: "Attendance") %>

		<br>
		<%= label_tag "Select group to assign this record to" %>
		<br>
		<%= select_tag(:group_id, options_for_select(@group.collect {|u| [u.name, u.id]}),{:id=>"sel",:class => 'form-control', :multiple => false, :name=>'project[group_id][]'}) %>
		<br>
		<div class="actions">
			<%= submit_tag 'Submit', :class=>'btn btn-primary' %>
		</div>
		<% end %>
	</div>
</div>


<script>
$(document).ready(function(){
    $('select').selectpicker();
});
</script>
